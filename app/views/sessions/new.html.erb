<div id="user-new" class="container-fluid bg-grey">
  <h2 class="text-center"><%= image_tag asset_path 'loginandsellout.png' %></h2>
  <div class="row">
    <div class="text-center">

            <%= form_tag sessions_path do %>
      <div class= "col-sm-10">
            <label>Username: </label>
            <%= text_field_tag :username %><br>

            <label>Password: </label>
            <%= password_field_tag :password %><br>

            <%= submit_tag "Sign In"  %>

            <% end %>
            <br>
          </div>
        </div>
      </div>
